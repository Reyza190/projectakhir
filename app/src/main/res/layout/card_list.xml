<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_marginHorizontal="5dp"
    app:cardCornerRadius="15dp"
    android:layout_width="400dp"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/primaryLight"
        android:layout_width="400dp"
        android:layout_height="100dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/image_article"
            app:cardCornerRadius="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_article"
                android:src="@drawable/img_article"
                android:layout_width="140dp"
                android:layout_height="80dp"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_article"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_article_title"
                android:text="Ini Judul"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-black"
                android:textSize="20dp"
                android:layout_width="220dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_article_desc"
                android:text="Ini deskripsi uhdfa  sfdisn fds fs dfsdfsi df dsf dif df isdfsd ifdis fjisdjf iaj djiji jaidj ias.."
                android:textColor="@color/white"
                android:textSize="15dp"
                android:fontFamily="sans-serif-light"
                android:layout_width="220dp"
                android:layout_height="50dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>


